{% comment %}
  About Page Template
  Sections can be added, removed, and reordered in the theme editor
{% endcomment %}

{%- if page.content != blank -%}
  <div class="page-content">
    <div class="page-content-container">
      {%- if page.title != blank -%}
        <h1 class="page-title">{{ page.title }}</h1>
      {%- endif -%}
      <div class="page-body">
        {{ page.content }}
      </div>
    </div>
  </div>
{%- endif -%}

{% sections %}
