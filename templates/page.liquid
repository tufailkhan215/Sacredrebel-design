{% comment %}
  Default Page Template
  Shows page content and allows sections to be added below it
  Sections can be added, removed, and reordered in the theme editor
{% endcomment %}

<div class="page-content">
  <div class="page-content-container">
    {%- if page.title != blank -%}
      <h1 class="page-title">{{ page.title }}</h1>
    {%- endif -%}
    
    {%- if page.content != blank -%}
      <div class="page-body">
        {{ page.content }}
      </div>
    {%- endif -%}
  </div>
</div>

{% sections %}

{% schema %}
{
  "name": "Page",
  "settings": []
}
{% endschema %}
