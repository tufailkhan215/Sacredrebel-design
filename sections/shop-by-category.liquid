{% schema %}
{
  "name": "Shop by Category",
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Apparel"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Category",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Apparel"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Home Decor"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Drinkware"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Kitchen & Bar"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<section class="section">
  <div class="container">
    <h2 class="section-title">Shop by Category</h2>
    <div class="category-grid">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link | default: '#' }}" class="category-card" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.title }}" class="category-card-image">
          {%- endif -%}
          <div class="category-card-content">
            <h3 class="category-card-title">{{ block.settings.title }}</h3>
            <span class="btn btn-white">Shop Now</span>
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>
